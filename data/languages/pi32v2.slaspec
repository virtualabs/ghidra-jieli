    imm2425 = (8, 9)
    imm2627 = (10,11)
    imm2427 = (8,11)

    imm1731 = (1,15)
    imm1831 = (2,15)
    imm1931 = (3,15)
    imm2031 = (4,15)
    imm2131 = (5,15)
    imm2231 = (6,15)
    imm2331 = (7,15)
    imm2431 = (8,15)
    imm2531 = (9,15)
    imm2631 = (10,15)
    imm2731 = (11,15)
